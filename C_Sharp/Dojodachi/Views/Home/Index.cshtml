<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Dojodachi</title>
</head>
<body>
    <div id='wrapper'>
        <div class='stats'>
            <p>Fullness: @ViewBag.Dojodachi.Fullness </p>
        </div>
        <div class='stats'>
            <p>Happiness: @ViewBag.Dojodachi.Happiness </p>
        </div>
        <div class='stats'> 
            <p>Meals: @ViewBag.Dojodachi.Meals</p>
        </div>
        <div class='stats'>
            <p>Energy: @ViewBag.Dojodachi.Energy</p>
        </div>
        <div id='boxed'>
            <h3>@ViewBag.Reaction</h3>
            <h3>@ViewBag.Message</h3>
        </div>
        <div id='button_spot'>
            @{
                if(ViewBag.GameStatus == "running")
                {
                    <div class='button_display'>
                        <form action="/completeActions" method="post">
                            <input type="hidden" value="feed" name="action">
                            <button type="submit">Feed</button>
                        </form>
                    </div>
                    <div class='button_display'>
                        <form action="/completeActions" method="post">
                            <input type="hidden" value="play" name="action">
                            <button type="submit">Play</button>
                        </form>
                    </div>
                    <div class='button_display'>
                        <form action="/completeActions" method="post">
                            <input type="hidden" value="work" name="action">
                            <button type="submit">Work</button>
                        </form>
                    </div>
                    <div class='button_display'>
                        <form action="/completeActions" method="post">
                            <input type="hidden" value="sleep" name="action">
                            <button type="submit">Sleep</button>
                        </form>
                    </div>
                }
                else if(ViewBag.GameStatus == "over")
                {
                    <div id="center">
                        <a href="/reset" method="post"><button>Reset</button></a>
                    </div>
                }
            }
        </div>
    </div>
    
</body>
</html>
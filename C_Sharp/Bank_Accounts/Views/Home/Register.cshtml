@model NewUser

<h1>Register</h1>
<form method="post" asp-action="Create" asp-controller="Home">
    <div class="form-group">
        <span asp-validation-for="first_name"></span>
        <label asp-for="first_name"></label>
        <input asp-for="first_name">
    </div>
    <div class="form-group">
        <span asp-validation-for="last_name"></span>
        <label asp-for="last_name"></label>
        <input asp-for="last_name">
    </div>
    <div class="form-group">
        <span asp-validation-for="email"></span>
        <label asp-for="email"></label>
        <input asp-for="email">
    </div>
    <div class="form-group">
        <span asp-validation-for="password"></span>
        <label asp-for="password"></label>
        <input asp-for="password">
    </div>
    <div class="form-group">
        <span asp-validation-for="confirm"></span>
        <label asp-for="confirm"></label>
        <input asp-for="confirm">
    </div>
    <input type="submit" value="Register">
</form>

